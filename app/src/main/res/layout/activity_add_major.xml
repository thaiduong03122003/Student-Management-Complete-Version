<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cef7ec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00E9FE"
            android:padding="8dp"
            android:text="Nhập chuyên ngành mới"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/img_add_major"
            android:background="#9CE0DF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingLeft="3dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Mã chuyên ngành"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etMajorId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:hint="Nhập tối đa 10 ký tự"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#888e8e" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Tên chuyên ngành"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etMajorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:hint="Nhập tên chuyên ngành"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#888e8e" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Số điện thoại liên hệ quản trị ngành"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etMajorPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:hint="Nhập vào đây"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#888e8e" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Website (nếu có)"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etMajorLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:hint="Nhập đường dẫn vào đây"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#888e8e" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:text="Chương trình đào tạo: "/>

                <Spinner
                    android:id="@+id/spEduProg"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:outlineSpotShadowColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:text="Lưu"
            android:textColor="@color/black"
            android:background="@drawable/button_background_lightmode"/>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Hủy"
            android:background="@drawable/button_white_lightmode"/>
    </LinearLayout>
</LinearLayout>