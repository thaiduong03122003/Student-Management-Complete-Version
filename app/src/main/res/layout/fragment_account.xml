<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1faf3"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <ImageView
        android:id="@+id/ivUser"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/female_avt"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Dương Nguyễn Nghĩa Thái"
        android:layout_gravity="center"
        android:textColor="#5c5f5e"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="duongthai3122003@gmail.com"
        android:textColor="#aaaead"
        android:textSize="15sp"
        android:layout_gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_background_lightmode"
        android:padding="15dp"
        android:text="Sửa thông tin người dùng"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@drawable/button_white_lightmode">

        <TextView
            android:id="@+id/tvHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"
            android:textColor="#757b7a"
            android:drawableStart="@drawable/baseline_history_24"
            android:drawablePadding="10dp"
            android:text="Lịch sử thao tác" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777c7b" />
        <TextView
            android:id="@+id/tvDarkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"
            android:textColor="#757b7a"
            android:drawableLeft="@drawable/baseline_dark_mode_24"
            android:drawablePadding="10dp"
            android:text="Chế độ tối màu: Đang tắt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777c7b" />

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"
            android:drawableStart="@drawable/baseline_logout_24"
            android:drawablePadding="10dp"
            android:text="Đăng xuất"
            android:textStyle="bold"
            android:textColor="#db3e00"/>
    </LinearLayout>


</LinearLayout>